<%layout('/layout/boilerplate')%>
<div class="row">
    <div class="col-8 offset-2">
    <body>
       
        <form method="post" action="/listing" class="needs-validation" novalidate enctype="multipart/form-data">
            <div class="mb-3">
                <label for "title" class="form-label">Title</label>
                <input name="listing[title]" placeholder="title" class="form-control" required>
                <div class="valid-feedback">Looking good</div>
                <div class="invalid-feedback">Please enter valid title</div>
            </div>

            <div class="mb-3">
                <label for "description" class="form-label">Description</label>
            <input name="listing[description]" placeholder="description" class="form-control" required>
            <div class="valid-feedback">Looking good</div>
                <div class="invalid-feedback">Please enter valid Descrition</div>
            </div>

            <div class="mb-3">
                <label for"image" class="form-label">Image</label>
                <input type="file" name="listing[image]" class="form-control" required> 
            </div>

            <div class="mb-3">
                <label for "price" class="form-label">Price</label>
            <input name="listing[price]" placeholder="price" class="form-control" required>
            <div class="valid-feedback">Looking good</div>
                <div class="invalid-feedback">Please enter valid Price</div>
            </div>

            <div class="row">
                <div class="col-md-4">
            <div class="mb-3">
                <label for "location" class="form-label">Location</label>
            <input name="listing[location]" placeholder="location" class="form-control" required>
            <div class="valid-feedback">Looking good</div>
                <div class="invalid-feedback">Please enter valid location</div>
            </div>
        </div>

    <div class="col-md-8">
            <div class="mb-3">
                <label for "country" class="form-label">Country</label>
            <input name="listing[country]" placeholder="country" class="form-control" required>
            <div class="valid-feedback">Looking good</div>
                <div class="invalid-feedback">Please enter valid country</div>
            </div>
        </div>

        </div>
            <button class="btn btn-dark changeColor">submit</button>
        </form>
  <!-- <script src="/js/script.js"></script> -->
    </body>
</div>
</div>